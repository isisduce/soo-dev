{
    "name": "nest-boilerplate",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": "22.19.0",
        "npm": "10.16.1"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "repl": "nest start --watch --entryFile=repl",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "typeorm-ts-node-commonjs -d ./database/typeorm/config.ts",
        "schema:sync": "typeorm-ts-node-commonjs -d ./database/typeorm/config.ts schema:sync",
        "schema:drop": "typeorm-ts-node-commonjs -d ./database/typeorm/config.ts schema:drop",
        "migration:generate": "typeorm-ts-node-commonjs -d ./database/typeorm/config.ts migration:generate ./database/typeorm/migrations/migrations",
        "migration:run": "typeorm-ts-node-commonjs -d ./database/typeorm/config.ts migration:run",
        "migration:show": "typeorm-ts-node-commonjs -d ./database/typeorm/config.ts migration:show",
        "typeorm-extension": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs -d typeorm/config.ts"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.0.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/typeorm": "^10.0.2",
        "archiver": "^7.0.1",
        "nest-winston": "^1.9.4",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.5",
        "pnpm": "^10.17.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20",
        "winston": "^3.13.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.2",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "common": "^0.2.5",
        "dotenv": "^17.2.2",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "iconv-lite": "^0.7.0",
        "jest": "^29.5.0",
        "mime-types": "^3.0.1",
        "multer": "^2.0.2",
        "prettier": "^3.0.0",
        "sharp": "^0.34.4",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typeorm-extension": "^3.5.1",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}